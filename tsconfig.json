{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "sourceMap": true,
      "inlineSourceMap": false
    }
  },
  "include": ["src/**/*", "src/generated/**/*"],
  // "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
